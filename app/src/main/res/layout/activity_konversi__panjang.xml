<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_konversi__panjang"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/panjang"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ogya.proyekakhir.Konversi_Panjang">

    <TextView
        android:id="@+id/txtKonMeter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:layout_marginTop="230px"
        android:text="Masukkan Panjang (Meter)"
        android:textColor="@android:color/white"
        android:textSize="68px"
        android:textStyle="normal|bold" />

    <EditText
        android:id="@+id/editMeter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtKonMeter"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:ems="10"
        android:hint="Masukkan Panjang (Meter)"
        android:inputType="textPersonName"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnCm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnInch"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:layout_marginTop="30px"
        android:background="@android:color/holo_red_light"
        android:text="SentiMeter"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnMm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnCm"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:layout_marginTop="30px"
        android:background="@android:color/holo_red_light"
        android:text="MiliMeter"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnInch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnKm"
        android:layout_centerVertical="true"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:layout_marginTop="30px"
        android:background="@android:color/holo_red_light"
        android:text="Inch"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/txtHasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editMeter"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:text="Hasil"
        android:textColor="@android:color/white"
        android:textSize="75px"
        android:textStyle="normal|bold" />

    <EditText
        android:id="@+id/editHasilpjg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtHasil"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnKm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editHasilpjg"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:layout_marginTop="30px"
        android:background="@android:color/holo_red_light"
        android:text="KiloMeter"
        android:textColor="@android:color/white" />

</RelativeLayout>
