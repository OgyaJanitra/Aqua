<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rumus_bangun_datar4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/datar"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ogya.proyekakhir.rumus_bangun_datar4">

    <TextView
        android:id="@+id/txtKtpt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtLyg2"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:layout_marginTop="230px"
        android:text="Belah Ketupat"
        android:textColor="@android:color/white"
        android:textSize="75px"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/txtKelKtpt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtKtpt"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:text="Keliling"
        android:textColor="@android:color/white"
        android:textSize="50px"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/txtKtpt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtKelKtpt"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:text="Keliling = Sisi + Sisi + Sisi + Sisi"
        android:textColor="@android:color/white"
        android:textSize="45px" />

    <TextView
        android:id="@+id/txtKtpt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtKtpt1"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:text="Keliling = 4 x Sisi"
        android:textColor="@android:color/white"
        android:textSize="45px" />

    <TextView
        android:id="@+id/txtLuasKtpt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtKtpt2"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:text="Luas"
        android:textColor="@android:color/white"
        android:textSize="50px"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/txtKtpt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtLuasKtpt"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:text="Luas = Diagonal1 x Diagonal2 / 2"
        android:textColor="@android:color/white"
        android:textSize="45px" />

    <Button
        android:id="@+id/btnPrev4Datar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/txtKtpt3"
        android:layout_marginBottom="81dp"
        android:layout_marginRight="75px"
        android:background="@android:color/holo_red_light"
        android:text="Sebelumnya"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnFwd4Datar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnPrev4Datar"
        android:layout_alignBottom="@+id/btnPrev4Datar"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="75px"
        android:background="@android:color/holo_red_light"
        android:text="Selanjutnya"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnPrev4Datar"
        android:layout_alignBottom="@+id/btnPrev4Datar"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="75px"
        android:layout_marginTop="30px"
        android:background="@android:color/holo_red_light"
        android:text="Selanjutnya"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnHomeDatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnFwd4Datar"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/btnFwd4Datar"
        android:layout_marginBottom="9dp"
        android:layout_marginRight="75px"
        android:background="@android:color/holo_red_light"
        android:text="Home"
        android:textColor="@android:color/white" />
</RelativeLayout>
