<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_rumus__bangun__ruang"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ruang"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/txtKbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:layout_marginTop="230px"
        android:text="Kubus"
        android:textColor="@android:color/white"
        android:textSize="75px"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/txtKVolKbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtKbs"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:text="Volume"
        android:textColor="@android:color/white"
        android:textSize="50px"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/txtKbs1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtKVolKbs"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:text="Volume = Panjang x Lebar x Tinggi"
        android:textColor="@android:color/white"
        android:textSize="45px" />

    <TextView
        android:id="@+id/txtLPKbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtKbs1"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:text="Luas Permukaan"
        android:textColor="@android:color/white"
        android:textSize="50px"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/txtKbs2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtLPKbs"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:text="L.P. = 6 x Rusuk x Rusuk"
        android:textColor="@android:color/white"
        android:textSize="45px" />


    <TextView
        android:id="@+id/txtKVolBlk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtBlk"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:text="Volume"
        android:textColor="@android:color/white"
        android:textSize="50px"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/txtBlk1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtKVolBlk"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:text="Volume = Panjang x Lebar x Tinggi"
        android:textColor="@android:color/white"
        android:textSize="45px" />

    <TextView
        android:id="@+id/txtLPBlk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtBlk1"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:text="Luas Permukaan"
        android:textColor="@android:color/white"
        android:textSize="50px"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/txtBlk2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtLPBlk"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:text="L.P. = 2 x (Sisi Alas + Sisi Samping + Sisi Depan)"
        android:textColor="@android:color/white"
        android:textSize="45px" />

    <TextView
        android:id="@+id/txtBlk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtKbs2"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:layout_marginTop="75px"
        android:text="Balok"
        android:textColor="@android:color/white"
        android:textSize="75px"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/btnPrev1Ruang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtBlk2"
        android:layout_below="@+id/txtBlk2"
        android:layout_marginRight="75px"
        android:layout_marginTop="75dp"
        android:background="@android:color/holo_red_light"
        android:text="Sebelumnya"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnFwd1Ruang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnPrev1Ruang"
        android:layout_alignBottom="@+id/btnPrev1Ruang"
        android:layout_alignEnd="@+id/txtBlk2"
        android:background="@android:color/holo_red_light"
        android:text="Selanjutnya"
        android:textColor="@android:color/white" />

</RelativeLayout>
