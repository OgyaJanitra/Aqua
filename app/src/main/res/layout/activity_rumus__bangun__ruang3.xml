<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rumus__bangun__ruang3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ruang"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ogya.proyekakhir.Rumus_Bangun_Ruang3">

    <TextView
        android:id="@+id/txtKVolTbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtTbg"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:text="Volume"
        android:textColor="@android:color/white"
        android:textSize="50px"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/txtTbg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtKVolTbg"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:text="Volume = Luas Alas x Tinggi"
        android:textColor="@android:color/white"
        android:textSize="40px" />

    <TextView
        android:id="@+id/txtLPTbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtTbg1"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:text="Luas Permukaan"
        android:textColor="@android:color/white"
        android:textSize="50px"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/txtTbg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtLPTbg"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:text="L.P. = 2 x Luas Alas + Luas Selimut"
        android:textColor="@android:color/white"
        android:textSize="45px" />

    <TextView
        android:id="@+id/txtTbg3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtTbg2"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:text="L.P. = ( 2 x phi x Jari-Jari x Jari-Jari) + phi x Diameter x Tinggi"
        android:textColor="@android:color/white"
        android:textSize="45px" />

    <TextView
        android:id="@+id/txtBl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtTbg3"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:layout_marginTop="75px"
        android:text="Bola"
        android:textColor="@android:color/white"
        android:textSize="75px"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/txtKVolBl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtBl"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:text="Volume"
        android:textColor="@android:color/white"
        android:textSize="50px"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/txtBl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtKVolBl"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:text="Volume = 4/3 x phi x Jari-Jari x Jari-Jari x Jari-Jari"
        android:textColor="@android:color/white"
        android:textSize="40px" />

    <TextView
        android:id="@+id/txtLPBl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtBl1"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:text="Luas Permukaan"
        android:textColor="@android:color/white"
        android:textSize="50px"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/txtBl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtLPBl"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:text="L.P. = 4 x phi x Jari-Jari x Jari-Jari"
        android:textColor="@android:color/white"
        android:textSize="45px" />

    <TextView
        android:id="@+id/txtTbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:layout_marginTop="81dp"
        android:text="Tabung"
        android:textColor="@android:color/white"
        android:textSize="75px"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/btnPrev3Ruang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtBl2"
        android:layout_below="@+id/txtBl2"
        android:layout_marginRight="75px"
        android:layout_marginStart="7dp"
        android:layout_marginTop="44dp"
        android:background="@android:color/holo_red_light"
        android:text="Sebelumnya"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnFwd3Ruang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnPrev3Ruang"
        android:layout_alignBottom="@+id/btnPrev3Ruang"
        android:layout_alignEnd="@+id/txtBl1"
        android:background="@android:color/holo_red_light"
        android:text="Selanjutnya"
        android:textColor="@android:color/white" />

</RelativeLayout>
