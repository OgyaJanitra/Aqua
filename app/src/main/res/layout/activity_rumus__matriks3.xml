<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rumus__matriks3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/matriks"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ogya.proyekakhir.rumus_Matriks3">

    <TextView
        android:id="@+id/inv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:layout_marginTop="230px"
        android:text="Invers 3 X 3"
        android:textColor="@android:color/white"
        android:textSize="50px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rumus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/inv3"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:text="Rumus :"
        android:textColor="@android:color/white"
        android:textSize="50px" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/rumus"
        android:layout_below="@+id/rumus"
        android:src="@drawable/matriks3" />

    <TextView
        android:id="@+id/adj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView8"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:text="Adapun, cara mencari Adjoint di matriks 3x3 yaitu :"
        android:textColor="@android:color/white"
        android:textSize="50px" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="600px"
        android:layout_height="600px"
        android:layout_alignStart="@+id/adj"
        android:layout_below="@+id/adj"
        android:src="@drawable/adjoint" />

    <Button
        android:id="@+id/btnFwd3Matriks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnPrev3Matriks"
        android:layout_alignBottom="@+id/btnPrev3Matriks"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="75px"
        android:background="@android:color/holo_red_light"
        android:text="Selanjutnya"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnPrev3Matriks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageView9"
        android:layout_marginBottom="26dp"
        android:layout_marginRight="75px"
        android:background="@android:color/holo_red_light"
        android:text="Sebelumnya"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnHomeMatriks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnFwd3Matriks"
        android:layout_alignStart="@+id/btnFwd3Matriks"
        android:layout_marginRight="75px"
        android:background="@android:color/holo_red_light"
        android:text="Home"
        android:textColor="@android:color/white" />

</RelativeLayout>
