<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_kalkulator_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pangkat2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ogya.proyekakhir.Kalkulator_2">

    <EditText
        android:id="@+id/editKal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtKal2"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:ems="10"
        android:hint="Masukkan Angka"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/txtHasilKal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editKal2"
        android:layout_centerHorizontal="true"
        android:text="Hasil Pangkat 2"
        android:textColor="@android:color/white"
        android:textSize="75px"
        android:textStyle="normal|bold" />

    <EditText
        android:id="@+id/editHasilKal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtHasilKal2"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnPangkat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editHasilKal2"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:layout_marginTop="250px"
        android:background="@android:color/holo_red_light"
        android:text="Pangkatkan"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/txtKal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230px"
        android:text="Masukkan Angka"
        android:textColor="@android:color/white"
        android:textSize="75px"
        android:textStyle="normal|bold" />
</RelativeLayout>
