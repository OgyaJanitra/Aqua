<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_konversi__mata__uang"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/uang"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ogya.proyekakhir.Konversi_Mata_Uang">

    <TextView
        android:id="@+id/txtUang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:layout_marginTop="230px"
        android:text="Masukkan Nilai Rupiah"
        android:textColor="@android:color/white"
        android:textSize="75px"
        android:textStyle="normal|bold" />

    <EditText
        android:id="@+id/editRupiah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtUang"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:ems="10"
        android:hint="Masukkan Nilai Rupiah"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/txtHasilUang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editRupiah"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:text="Hasil Konversi Mata Uang"
        android:textColor="@android:color/white"
        android:textSize="65px"
        android:textStyle="normal|bold" />

    <EditText
        android:id="@+id/editKonUang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtHasilUang"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:ems="10"
        android:hint="Hasil Konversi"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnPounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editKonUang"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:layout_marginTop="30px"
        android:background="@android:color/holo_red_light"
        android:text="Poundsterling"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnDollar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnPounds"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:layout_marginTop="30px"
        android:background="@android:color/holo_red_light"
        android:text="U.S. Dollar"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnEuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnDollar"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:layout_marginTop="30px"
        android:background="@android:color/holo_red_light"
        android:text="Euro"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnYen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnEuro"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:layout_marginTop="30px"
        android:background="@android:color/holo_red_light"
        android:text="Yen"
        android:textColor="@android:color/white" />

</RelativeLayout>
